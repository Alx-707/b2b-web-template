{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/app/**/*.tsx",
    "src/app/api/**/*.ts",
    "src/middleware.ts",
    "src/app/layout.tsx",
    "src/app/not-found.tsx",
    "src/app/global-error.tsx"
  ],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "src/**/*.{test,spec}.{ts,tsx}",
    "src/**/__tests__/**",
    "src/test/**",
    "src/testing/**",
    "src/components/dev-tools/**",
    "scripts/**",
    "src/templates/**",
    "src/components/shared/animation-examples.tsx",
    "src/components/shared/animations/**",
    "src/components/shared/under-construction-v*.tsx",
    "src/components/shared/under-construction-v*/**",
    "src/components/i18n/*-demo.tsx",
    "src/components/performance/**",
    "src/lib/performance-monitoring-*.ts",
    "src/lib/react-scan-config.ts",
    "src/lib/i18n-*.ts",
    "src/constants/test-*.ts",
    "src/constants/performance.ts"
  ],
  "ignoreDependencies": [
    "@axe-core/playwright",
    "@lhci/cli",
    "@next/eslint-plugin-next",
    "@sentry/cli",
    "axe-core",
    "concurrently",
    "embla-carousel-react",
    "eslint-config-next",
    "eslint-import-resolver-typescript",
    "eslint-plugin-import",
    "eslint-plugin-promise",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "geist",
    "husky",
    "js-yaml",
    "lighthouse",
    "next-sitemap",
    "postcss",
    "react-scan",
    "sharp",
    "source-map-explorer",
    "typescript-eslint"
  ],
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },
  "includeEntryExports": true
}
